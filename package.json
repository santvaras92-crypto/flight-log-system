{
  "name": "flight-log-system",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "prisma generate",
    "build": "next build",
    "start": "sh -c 'if [ -z \"$DATABASE_URL\" ]; then echo \"ERROR: DATABASE_URL is not set\"; exit 1; fi; case \"$DATABASE_URL\" in *sslmode=require*) ;; *) echo \"WARN: DATABASE_URL missing sslmode=require. Appending...\"; export DATABASE_URL=\"$DATABASE_URL?sslmode=require\" ;; esac; echo \"Using DATABASE_URL: $(echo $DATABASE_URL | sed -E \"s#(postgresql:\\/\\/[^:]+:)[^@]+@#\\1******@#\")\"; prisma generate; prisma db push --accept-data-loss || { echo \"Prisma migration failed. Check credentials and sslmode=require.\"; exit 1; }; next start -p \"${PORT:-3000}\"'",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "deploy:migrate": "railway run npx prisma db push",
    "deploy:seed": "railway run npm run db:seed",
    "deploy:open": "railway open",
    "deploy:logs": "railway logs"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.943.0",
    "@handsontable/react": "^16.2.0",
    "@heroicons/react": "^2.2.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.22.0",
    "bcrypt": "^6.0.0",
    "chart.js": "^4.5.1",
    "decimal.js-light": "^2.5.1",
    "handsontable": "^16.2.0",
    "hyperformula": "^3.1.0",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "next": "^14.2.0",
    "next-auth": "^4.24.13",
    "openai": "^4.70.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.22",
    "csv-parse": "^6.1.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.2.0",
    "postcss": "^8.5.6",
    "prisma": "^5.22.0",
    "tailwindcss": "^3.4.18",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.6.0"
  }
}
